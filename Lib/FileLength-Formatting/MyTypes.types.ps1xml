<Types>
  <Type>
    <Name>System.IO.FileInfo</Name>
    <Members>
      <ScriptProperty>
        <!-- FileSize converts Length to a human readable format (bytes, KB, MB, GB, TB...) -->
        <Name>FileSize</Name>
        <GetScriptBlock>

					Convert-FileLength -Length $this.Length

        </GetScriptBlock>
      </ScriptProperty>
    </Members>
  </Type>
</Types>